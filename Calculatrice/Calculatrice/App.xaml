<Application x:Class="Calculatrice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Calculatrice"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Color x:Key="windowBackgroundColor"/>
        <Color x:Key="globalForegroundColor"/>
        <Color x:Key="normalButtonBackgroundColor"/>
        <Color x:Key="numericButtonBackgroundColor"/>

        <Style TargetType="Window" x:Key="windowStyle">
            <Setter Property="Title" Value="Calculatrice"/>
            <Setter Property="Height" Value="800"/>
            <Setter Property="Width" Value="500"/>
            <Setter Property="ResizeMode" Value="CanMinimize"/>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="{DynamicResource windowBackgroundColor}"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
