        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculatrice"
        mc:Ignorable="d"
        Height="50.149" Width="119.105" ResizeMode="NoResize" ShowInTaskbar="False" Deactivated="popup_deactivated" WindowStyle="none">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Formule" Click="buttonFormule_Click"/>
        <Button Grid.Row="1" Content="Résultat" Click="buttonResultat_Click"/>
    </Grid>
</Window>
